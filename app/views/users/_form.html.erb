<%= error(@user) %>
<table class="table table-striped">
	<tr>
		<th><%= field.label(:name, "Imię") %></th>
		<td><%= field.text_field(:name, :class=>'form-control') %></td>
	</tr>
	<tr>
		<th><%= field.label(:surname, "Nazwisko") %></th>
		<td><%= field.text_field(:surname, :class=>'form-control') %></td>
	</tr>
	<tr>
		<th><%= field.label(:user, "Login") %></th>
		<td><%= field.text_field(:user, :class=>'form-control') %></td>
	</tr>
	<tr>
		<th><%= field.label(:email, "Adres e-mail") %></th>
		<td><%= field.text_field(:email, :class=>'form-control') %></td>
	</tr>
	<tr>
		<th><%= field.label(:password, "Hasło:") %></th>
		<td><%= field.password_field(:password, :class=>'form-control') %></td>
	</tr>
	<tr>
		<th><%= field.label(:password_confirmation, "Powtórz hasło:") %></th>
		<td><%= field.password_field(:password_confirmation, :class=>'form-control') %></td>
	</tr>
</table>
