<% page_title = "Categories" %>
<section id="content">
    <div class="container">
        <div class="row">
            <h2>Strony w kategorii:
                <%= @category.name %></h2>
            <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-12 col-xs-offset-0">
                <% @category.pages.visible.sort.each do |page| %>
                <%= link_to(page.name, {:action => 'page', :page_id => page.id}, :class => 'btn btn-danger btn-lg btn-block') %>
                <% end %>
            </div>
        </div>
    </div>
</section>
