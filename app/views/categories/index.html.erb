<div class="jumbotron">
	<h1>Kategorie</h1>
	<%= link_to("Dodaj nową kategorię", {:action=>'new'}, :class => 'btn btn-mini btn-primary') %>
	<p style="text-align: right;">Liczba kategorii: <%= @categories.size %></p>
	<table class="table table-striped">
		<tr class="info">
			<th>Pozycja</th>
			<th>Nazwa</th>
			<th>Widoczność</th>
			<th>Strony</th>
			<th>Akcje</th>
		</tr>
		<% @categories.each do |category| %>
		<tr>
			<td><%= category.position %></td>
			<td><%= category.name %></td>
			<td><%= view_status(category.visible)%></td>
			<td><%= category.pages.size %></td>
			<td class="actions">
				<%= link_to("Strony", {:controller=>'pages', :category_id => category.id}, :class => 'btn btn-xs btn-info') %>
				<%= link_to("Pokaż", {:action=>'show', :id=>category.id}, :class=>'btn btn-xs btn-default') %>
				<%= link_to("Edycja", {:action=>'edit', :id=>category.id}, :class=>'btn btn-xs btn-primary') %>
				<%= link_to("Usuń", {:action=>'delete', :id=>category.id}, :class=>'btn btn-xs btn-danger') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
