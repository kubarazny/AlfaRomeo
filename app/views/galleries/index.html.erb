<div class="jumbotron">
	<h1>Galerie</h1>
	<%= link_to("Dodaj nowa galerię", {:action=>'new'}, :class => 'btn btn-mini btn-primary') %>
	<p style="text-align: right;">Liczba galerii: <%= @gallery.size %></p>
	<table class="table table-striped">
		<tr class="info">
			<th>Nazwa</th>
			<th>Pozycja</th>
			<th>Widoczność</th>
			<th>Liczba zdjęć</th>
			<th>Akcje</th>
		</tr>
		<% @gallery.each do |gallery| %>
		<tr>
			<td><%= gallery.name %></td>
			<td><%= gallery.position %></td>
			<td><%= view_status(gallery.visible)%></td>
			<td><%= gallery.photos.size %></td>
			<td class="actions">
				<%= link_to("Zdjęcia", {:controller=>'photos', :gallery_id=>gallery.id}, :class=>'btn btn-xs btn-info') %>
				<%= link_to("Pokaż", {:action=>'show', :id=>gallery.id}, :class=>'btn btn-xs btn-default') %>
				<%= link_to("Edytuj", {:action=>'edit', :id=>gallery.id}, :class=>'btn btn-xs btn-primary') %>
				<%= link_to("Usuń", {:action=>'delete', :id=>gallery.id}, :class=>'btn btn-xs btn-danger') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
