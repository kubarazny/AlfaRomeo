<div class="jumbotron">
	<h1>Strony</h1>
	<%= link_to("Dodaj nową stronę", {:action=>'new', :category_id => @categories.id}, :class => 'btn btn-mini btn-primary') %>
	<p style="text-align: right;">Liczba stron: <%= @pages.size %></p>
	<table class="table table-striped">
		<tr class="info">
			<th>Pozycja</th>
			<th>Kategoria</th>
			<th>Nazwa</th>
			<th>Widoczność</th>
			<th>Artykuły</th>
			<th>Akcje</th>
		</tr>
		<% @pages.each do |page| %>
		<tr>
			<td><%= page.position %></td>
			<td><%= page.category.name %>
				<td><%= page.name %></td>
				<td><%= view_status(page.visible)%></td>
				<td><%= page.articles.size %></td>
				<td class="actions">
					<%= link_to("Artykuły", {:controller => 'articles', :page_id => page.id}, :class => 'btn btn-xs btn-info') %>
					<%= link_to("Pokaż", {:action=>'show', :id=>page.id, :category_id => @categories.id}, :class=>'btn btn-xs btn-default') %>
					<%= link_to("Edycja", {:action=>'edit', :id=>page.id, :category_id => @categories.id}, :class=>'btn btn-xs btn-primary') %>
					<%= link_to("Usuń", {:action=>'delete', :id=>page.id, :category_id => @categories.id}, :class=>'btn btn-xs btn-danger') %>
				</td>
			</tr>
			<% end %>
		</table>
		<%= link_to("powrót do kategorii", {:controller => 'categories', :action => 'index'}, :class => 'btn btn-xs btn-default') %>
	</div>
