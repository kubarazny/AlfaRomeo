<div class="jumbotron">
	<h1>Pokaż artykuł</h1>
	<table class="table table-striped">
		<tr>
			<th>Strona</th>
			<td><%= @article.page.name %></td>
		</tr>
		<tr>
			<th>Nazwa</th>
			<td><%= @article.name %></td>
		</tr>
		<tr>
			<th>Pozycja</th>
			<td><%= @article.position %></td>
		</tr>
		<tr>
			<th>Czy jest widoczny</th>
			<td><%= @article.visible ? 'Tak' : 'Nie' %></td>
		</tr>
		<tr>
			<th>Zdjęcie:</th>
			<td><%= image_tag(@article.photo) %></td>
		</tr>
		<tr>
			<th>Treść:</th>
			<td><%= raw(@article.content) %></td>
		</tr>
		<tr>
			<th>Utworzony:</th>
			<td><%= @article.created_at %></td>
		</tr>
		<tr>
			<th>Zmodyfikowany:</th>
			<td><%= @article.updated_at %></td>
		</tr>
	</table>
	<div class="text-center">
		<%=link_to("powrót", {:action=>'index', :page_id => @pages.id}, :class=>'btn btn-default') %>
	</div>
