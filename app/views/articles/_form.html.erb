<%= error(@article) %>
<table class="table table-striped">
	<tr>
		<th><%= field.label(:page_id, "Strona") %></th>
		<td><%= field.select(:page_id, @page.map { |t| [t.name, t.id] }, :class=>'form-control') %></td>
	</tr>
	<tr>
		<th><%= field.label(:name, "Nazwa") %></th>
		<td><%= field.text_field(:name, :class=>'form-control', :placeholder => "Wprowadź nazwę") %></td>
	</tr>
	<tr>
		<th><%= field.label(:position, "Pozycja") %></th>
		<td><%= field.select(:position, 1..@counter, :class=>'form-control', :selected => @counter) %></td>
	</tr>
	<tr>
		<th><%= field.label(:visible, "Czy jest widoczny?") %></th>
		<td><%= field.check_box(:visible) %></td>
	</tr>
	<% if !@article.photo.blank? %>
	<tr>
		<th>Zdjęcie:</th>
		<td><%= image_tag(@article.photo) %></td>
	</tr>
	<% end %>
	<tr>
		<th><%= field.label(:photo, "Zdjęcie") %></th>
		<td><%= field.file_field(:photo) %></td>
	</tr>
	<tr>
		<th><%= field.label(:content, "Treść:") %></th>
		<td><%= field.text_area(:content, :class=>'form-control ckeditor') %></td>
	</tr>
</table>
